<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="table data" id="flex-container">
        <div class "c1">
            <h2>Mark sheet</h2>
        </div>
        <div class "c1">
            <table border="1">
                <tr>
                    <th>S.no</th>
                    <th>Name</th>
                    <th>Roll No</th>
                    <th>Date</th>
                    <th>Test 1</th>
                    <th>Test 2</th>
                    <th>Test 3</th>
                    <th>Average Score</th>
                </tr>
                <% if(userData.length !=0){ %>
            <% userData.forEach((results) => { %>
                <% var i=1; %>
            <tr>
                <td><%= i; %></td>
                <td><%= results.Username %></td>
                <td><%= results.rollno %></td>
                <% var datemonth=results.exam_date.getMonth()+1 %>
                <td><%= results.exam_date.getDate()+"/"+datemonth+"/"+results.exam_date.getFullYear() %></td>
                <!-- <td><%= results.Email %></td> -->
                <td><%= results.t1 %></td>
                <td><%= results.t2 %></td>
                <td><%= results.t3 %></td>
                <td><%= Math.round((results.t1 + results.t2 + results.t3)/3) %></td>
            </tr>
                <% i++; %>
        <% }); %>
        <% } else{ %>
        <tr>
            <td colspan="9">No data found</td>
        </tr>
        <% } %>        
            </table>
        </div>
    </div>
</body>
</html>